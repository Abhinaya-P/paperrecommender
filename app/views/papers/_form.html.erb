<%= simple_form_for(@paper) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :keywords %>
    <%= f.input :author %>
    <%= f.input :references %>
    <%= f.input :topics %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
